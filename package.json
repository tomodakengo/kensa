{
  "name": "windows-ui-automation-test-tool",
  "version": "1.0.0",
  "description": "Windowsデスクトップアプリケーションのノーコードテスト自動化ツール",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron . --dev",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dist": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "windows",
    "automation",
    "testing",
    "ui-automation",
    "playwright",
    "electron",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.15.0",
    "@tensorflow/tfjs-node": "^4.15.0",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "natural": "^6.10.4",
    "onnxruntime-web": "^1.16.3",
    "opencv.js": "^1.2.1",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "tesseract.js": "^5.0.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.yourcompany.windows-ui-automation-test-tool",
    "productName": "Windows UI Automation Test Tool Kensa",
    "directories": {
      "output": "dist/installer",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "locators/**/*",
      "index.html",
      "styles.css",
      "renderer.js",
      "!node_modules/**/*",
      "!src/**/*",
      "!**/*.test.ts",
      "!**/*.spec.ts",
      "!create-icon.js",
      "!TODO.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kensa UI Test Tool",
      "license": "LICENSE.txt",
      "language": "1041"
    },
    "msi": {
      "oneClick": false,
      "upgradeCode": "12345678-1234-1234-1234-123456789012"
    },
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
