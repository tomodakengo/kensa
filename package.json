{
  "name": "windows-ui-automation-test-tool",
  "version": "1.0.0",
  "description": "Windowsデスクトップアプリケーションのノーコードテスト自動化ツール",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "windows",
    "automation",
    "testing",
    "ui-automation",
    "playwright",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "dependencies": {
    "edge-js": "^16.0.0",
    "iohook": "^0.9.3",
    "sqlite3": "^5.1.6",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.yourcompany.windows-ui-automation-test-tool",
    "productName": "Windows UI Automation Test Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
} 